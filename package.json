{
    "name": "nia-api",
    "version": "1.0.2",
    "description": "nia-api 自用 api 服务器",
    "main": "src/app.ts",
    "repository": "https://github.com/alongw/nia-api",
    "author": "alongw <alongw@alongw.cn>",
    "license": "AGPL-3.0",
    "scripts": {
        "prepare": "husky install",
        "cz": "git-cz",
        "pushall": "yarn lint && git add . && yarn cz && git push",
        "push": "yarn lint && yarn cz && git push",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier --write --cache .",
        "start": "yarn lint && npx ts-node src/app.ts",
        "dev": "set NODE_ENV=develop&& npx nodemon src/app.ts",
        "build": "npx eslint . && npx ts-node ./script/build.ts",
        "build:nolint": "npx ts-node ./script/build.ts",
        "build:tsc": "npx tsc",
        "build:lint": "npx eslint . && npx ts-node ./script/build.ts",
        "build:ncc": "ncc build src/app.ts -o dist/ncc"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-angular": "^17.6.5",
        "@commitlint/cz-commitlint": "^17.5.0",
        "@types/axios": "^0.14.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/figlet": "^1.5.7",
        "@types/fs-extra": "^11.0.3",
        "@types/node": "^20.4.0",
        "@types/shelljs": "^0.8.12",
        "@types/tinycolor2": "^1.4.3",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "@vercel/ncc": "^0.38.1",
        "commitizen": "^4.3.0",
        "eslint": "^8.43.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.2",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx,md,json}": "prettier --write"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "figlet": "^1.7.0",
        "fs-extra": "^11.1.1",
        "log4js": "^6.9.1",
        "qs": "^6.11.2",
        "shelljs": "^0.8.5",
        "tinycolor2": "^1.6.0",
        "yaml": "^2.3.1"
    }
}
